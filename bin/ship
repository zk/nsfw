#!/bin/bash

SCRIPT_DIR="$( cd "$( dirname "${BASH_SOURCE[0]}" )" && pwd )"

REPO=$SCRIPT_DIR/..

set -e

$SCRIPT_DIR/test

cd $REPO && \
    lein jar && \
    lein pom && \
    scp $REPO/pom.xml $REPO/target/nsfw.jar clojars@clojars.org: && \
    lein install


REPO=$SCRIPT_DIR/../lein-template

cd $REPO && \
    lein jar && \
    lein pom && \
    scp $REPO/pom.xml $REPO/target/lein-template.jar clojars@clojars.org: && \
    lein install
